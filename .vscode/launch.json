    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch iCal Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "args": [
                "serve"
            ]

        },
        {
            "name": "get calendar",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/main.go",
            "args": [
                "get", "calendar", "--server", "127.0.0.1", "--debug", "--grpcPort", "50051"
            ]

        }
    ]
}